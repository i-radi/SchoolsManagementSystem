@model GetUserDto

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-4">User Details</h1>

    <div class="card mt-4">
        <div class="card-header">
            <h4>Member Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                {
                    <dt class="col-sm-3">Profile Picture</dt>
                    <dd class="col-sm-9">
                        <img src="~/uploads/@Model.ProfilePicturePath" alt="Profile Picture" class="img-fluid rounded" style="max-width: 400px; max-height: 400px;">
                    </dd>
                }
                <dt class="col-sm-3">QR Code</dt>
                <dd class="col-sm-9">
                    <img src="@Url.Action("GenerateQRCode", "Members", new { userId = Model.Id })" alt="QR Code">
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>