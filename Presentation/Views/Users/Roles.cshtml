@using VModels.ViewModels;
@model IEnumerable<GetRoleViewModel>

@{
    ViewData["Title"] = "Roles";
}

<h1>Manage Roles</h1>

<p>
    <a asp-action="CreateRole" asp-route-userId="@ViewBag.UserId" >Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> Role</th>
            <th> Organization</th>
            <th> School</th>
            <th> Activity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Organization)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.School)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activity)
                </td>
                <td>
                    <a asp-action="DeleteRole" asp-route-userId="@ViewBag.UserId" asp-route-roleName="@item.Name">Delete Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
