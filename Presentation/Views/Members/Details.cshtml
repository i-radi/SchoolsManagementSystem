@model UserViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-4">User Details</h1>

    <div class="card mt-4">
        <div class="card-header">
            <h4>Member Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
                <dt class="col-sm-3">Gender</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Gender)</dd>
                <dt class="col-sm-3">Birthdate</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Birthdate)</dd>
                <dt class="col-sm-3">NationalID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NationalID)</dd>
                <dt class="col-sm-3">MentorName</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MentorName)</dd>
                <dt class="col-sm-3">FirstMobile</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstMobile)</dd>
                <dt class="col-sm-3">SecondMobile</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SecondMobile)</dd>
                <dt class="col-sm-3">FatherMobile</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FatherMobile)</dd>
                <dt class="col-sm-3">MotherMobile</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MotherMobile)</dd>
                <dt class="col-sm-3">SchoolUniversityJob</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SchoolUniversityJob)</dd>
                @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                {
                    <dt class="col-sm-3">Picture</dt>
                    <dd class="col-sm-9">
                        <img src="~/uploads/@Model.ProfilePicturePath" alt="Profile Picture" class="img-fluid rounded" style="max-width: 200px; max-height: 200px;">
                    </dd>
                }
                <dt class="col-sm-3">QR Code</dt>
                <dd class="col-sm-9">
                    <img src="~/qrcodes/@(Model.Id).png" alt="QR Code" style="max-width: 400px; max-height: 400px;">
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>